{
  "name": "Vieb",
  "version": "0.1.0",
  "description": "Vim Inspired Electron Browser",
  "main": "app/index.js",
  "build": {
    "appId": "com.github.Jelmerro.Vieb",
    "linux": {
      "executableName": "vieb",
      "icon": "build/icons",
      "category": "Network;WebBrowser;",
      "maintainer": "Jelmer van Arnhem",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "freebsd",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "build/icons",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "extraFiles": [
        {
          "from": "README.md",
          "to": "../../README.md"
        },
        {
          "from": "LICENSE",
          "to": "../../LICENSE"
        }
      ]
    },
    "win": {
      "icon": "build/icons",
      "legalTrademarks": "Copyright @ Jelmer van Arnhem | Licensed as free software (GPL-3.0+)",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "license": "LICENSE"
    },
    "fileAssociations": [
      {
        "ext": "html"
      }
    ],
    "protocols": [
      {
        "name": "Websites",
        "schemes": [
          "http",
          "https"
        ]
      }
    ],
    "copyright": "Copyright @ Jelmer van Arnhem | Licensed as free software (GPL-3.0+)",
    "extraFiles": [
      "README.md",
      "LICENSE"
    ]
  },
  "scripts": {
    "start": "electron app",
    "buildall": "electron-builder --linux --mac --win",
    "buildlinux": "electron-builder --linux",
    "buildmac": "electron-builder --mac",
    "buildwin": "electron-builder --win"
  },
  "repository": "https://github.com/Jelmerro/Vieb",
  "homepage": "https://github.com/Jelmerro/Vieb",
  "keywords": [
    "Electron",
    "Browser",
    "Internet"
  ],
  "author": "Jelmer van Arnhem",
  "email": "Jelmerro@users.noreply.github.com",
  "license": "GPL-3.0+",
  "devDependencies": {
    "electron": "^4.0.4",
    "electron-builder": "^20.38.5",
    "eslint": "^5.13.0"
  }
}
